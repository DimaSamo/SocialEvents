<%= form_for( @event) do |f| %>

    <%if @event.errors.any?%>
        <h2>Errors:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <%end%>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
    <%= f.label :title %>
    <%=f.text_field :title, required: true, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :description %>
    <%=f.text_area :description, required: true, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :location %>
    <%=f.text_field :location, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :date %>
    <%= f.datetime_field :date, required: true, class: "form-control" %>
    </div>
    
    <%=f.submit  class: "btn btn-success"%>
<% end %>