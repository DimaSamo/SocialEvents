<h1>Social Events</h1>

<%if logged_in?%>
    Hello <%=User.find(session[:user_id]).user_name%>
    <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
    <% end %>
    <%= link_to  "Create New Event", new_user_event_url(current_user.id) %>
    <%= button_to  "My Events", user_events_path(current_user.id), method: :get%>
    <%= button_to  "Events I'm Attending", user_events_path(current_user.id), method: :get, params: {rsvpd: true}%>
<%else%>
    <%= button_to  "Login", login_path, method: :get, class: "btn btn-success"%>
    <%= button_to  "Sign Up", signup_path, method: :get, class: "btn btn-warning"%>
<%end%>